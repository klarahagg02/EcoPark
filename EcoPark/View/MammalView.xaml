<Window x:Class="EcoPark.View.MammalView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EcoPark.View"
        mc:Ignorable="d"
        Title="MammalView" Height="400" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="115*"/>
            <RowDefinition Height="13*"/>
        </Grid.RowDefinitions>
        <Rectangle HorizontalAlignment="Center" Height="116" Margin="0,208,0,0" Stroke="Black" VerticalAlignment="Top" Width="306"/>
        <Rectangle HorizontalAlignment="Center" Height="156" Margin="0,36,0,0" Stroke="Black" VerticalAlignment="Top" Width="306"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="39,56,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="136" FontWeight="Bold"><Run Language="sv-se" Text="General Mammal Data"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="22" Margin="73,92,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="95"><Run Language="sv-se" Text="Number of legs"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="26" Margin="74,128,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="66" RenderTransformOrigin="0.5,0.5">
            <TextBlock.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform AngleX="0.868"/>
                    <RotateTransform/>
                    <TranslateTransform X="0.318"/>
                </TransformGroup>
            </TextBlock.RenderTransform><Run Text="Tail length "/><LineBreak/></TextBlock>
        <TextBox x:Name="txtNumOfLegs" HorizontalAlignment="Left" Height="22" Margin="164,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42"/>
        <TextBox x:Name="txtTailLength" HorizontalAlignment="Left" Height="21" Margin="143,124,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="42"/>
        <TextBlock HorizontalAlignment="Left" Height="20" Margin="190,130,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="23"><Run Language="sv-se" Text="cm"/></TextBlock>
        <Button x:Name="btnOK" Content="OK" HorizontalAlignment="Left" Height="33" Margin="84,336,0,0" VerticalAlignment="Top" Width="66" Click="btnOK_Click" Background="#FF56B32D" FontWeight="Bold" Grid.RowSpan="2"/>
        <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Left" Height="33" Margin="182,336,0,0" VerticalAlignment="Top" Width="68" Click="btnCancel_Click" Background="#FFFF1B1B" FontWeight="Bold" Grid.RowSpan="2"/>
        <TextBlock x:Name="txtSpecificSpecies" HorizontalAlignment="Left" Height="24" Margin="38,222,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="171" FontWeight="Bold"><Run Language="sv-se" Text="x Specific Data"/></TextBlock>
        <TextBlock x:Name="txtblock1" HorizontalAlignment="Left" Height="20" Margin="60,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="68"><Run Text="TextBlock"/><Run Language="sv-se" Text="1"/></TextBlock>
        <TextBox x:Name="txtInputBlock1" HorizontalAlignment="Left" Height="20" Margin="140,256,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="85"/>
        <TextBlock x:Name="txtblock2" HorizontalAlignment="Left" Height="18" Margin="60,285,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="80"><Run Text="TextBlock"/><Run Language="sv-se" Text="2"/></TextBlock>
        <CheckBox x:Name="chkInput" Content="Yes" HorizontalAlignment="Left" Height="18" Margin="140,285,0,0" VerticalAlignment="Top" Width="51"/>
    </Grid>
</Window>
