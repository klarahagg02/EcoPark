<Window
    x:Class="EcoPark.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:EcoPark"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="800"
    Height="450"
    mc:Ignorable="d">
    <Grid>
        <TextBlock
            Margin="92,10,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run
                FontSize="25"
                Language="sv-se"
                Text="Create Animal" /></TextBlock>
        <ListBox
            x:Name="lstCategories"
            Width="114"
            Height="147"
            Margin="52,82,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            d:ItemsSource="{d:SampleData ItemCount=5}"
            SelectionChanged="lstCategories_SelectionChanged" />
        <TextBlock
            Width="114"
            Height="24"
            Margin="52,58,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Categories" /></TextBlock>
        <ListBox
            x:Name="lstSpecies"
            Width="114"
            Height="111"
            Margin="182,82,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            d:ItemsSource="{d:SampleData ItemCount=5}" />
        <TextBlock
            Width="114"
            Height="24"
            Margin="182,57,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Species" /></TextBlock>
        <TextBlock
            Width="90"
            Height="16"
            Margin="64,276,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            FontWeight="Bold"
            TextWrapping="Wrap"><Run Language="sv-se" Text="General Data" /><LineBreak /><Run Language="sv-se" /></TextBlock>
        <TextBlock
            Width="44"
            Height="18"
            Margin="89,299,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Name" /></TextBlock>
        <TextBlock
            Width="32"
            Height="18"
            Margin="89,322,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Age" /></TextBlock>
        <TextBlock
            Width="44"
            Height="18"
            Margin="89,345,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Weight" /></TextBlock>
        <TextBlock
            Width="44"
            Height="18"
            Margin="89,368,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Language="sv-se" Text="Gender" /></TextBlock>
        <TextBox
            x:Name="txtName"
            Width="134"
            Height="18"
            Margin="138,299,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="0.16,0.724"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtAge"
            Width="80"
            Height="18"
            Margin="138,322,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <TextBox
            x:Name="txtWeight"
            Width="80"
            Height="18"
            Margin="138,345,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap" />
        <ComboBox
            x:Name="cboSelectGender"
            Width="80"
            Height="18"
            Margin="138,368,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            SelectionChanged="ComboBox_GenderSelection" />
        <TextBlock
            Width="16"
            Height="18"
            Margin="223,345,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            RenderTransformOrigin="-0.375,0.724"
            TextWrapping="Wrap"><Run Language="sv-se" Text="g" /></TextBlock>
        <CheckBox
            x:Name="cboxListAllSpecies"
            Width="150"
            Height="24"
            Margin="182,0,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Content="List all animal species" />
        <Button
            x:Name="btnCreateAnimal"
            Width="103"
            Height="20"
            Margin="182,234,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF49A421"
            Click="btnCreateAnimal_Click"
            Content="Create animal"
            RenderTransformOrigin="0.152,0.537" />
        <Button
            x:Name="btnAddGenData"
            Width="56"
            Height="21"
            Margin="138,391,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Background="#FF49A421"
            Click="btnAddGenData_Click"
            Content="Add" />
        <TextBlock
            Width="144"
            Height="33"
            Margin="479,188,0,0"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            TextWrapping="Wrap"><Run Language="sv-se" Text="image stuff will be on this side of the UI" /></TextBlock>
    </Grid>
</Window>
